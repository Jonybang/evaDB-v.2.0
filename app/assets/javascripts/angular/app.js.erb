'use strict';

angular.module('app', [
    'app.tasks',
    'app.projects',

    'ngResource',
    //'app.loading',
    'ui.bootstrap',
    'ui.bootstrap.showErrors',
    'angular-date-picker-polyfill',
    'ng-rails-csrf',
    'angularMoment',
    'rt.debounce',
    'noty',
    'ui.router',
    'ui.router.tabs'])
        .config(['$urlRouterProvider', '$stateProvider', '$locationProvider', 'showErrorsConfigProvider', function($urlRouterProvider, $stateProvider, $locationProvider, showErrorsConfigProvider) {

            $urlRouterProvider.otherwise("/tasks");

            <% @templates_path = 'angular/templates/' %>
            $stateProvider
                    .state('app', {
                        url: '',
                        controller: 'AppCtrl',
                        templateUrl: '<%= asset_path(@templates_path + 'index.html') %>'
                    });
            $locationProvider.html5Mode(true);

            showErrorsConfigProvider.showSuccess(true);
        }]);

angular.module('app').run(['amMoment', function(amMoment) {
    amMoment.changeLocale('ru');
}]);