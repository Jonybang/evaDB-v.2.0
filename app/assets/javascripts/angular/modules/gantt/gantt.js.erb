'use strict';
angular.module('app.gantt', ['ngResource', 'ui.bootstrap', 'ui.bootstrap.showErrors', 'angular-date-picker-polyfill', 'ng-rails-csrf', 'angularMoment', 'noty', 'ui.router', 'ui.router.tabs'])
        .config(['$urlRouterProvider', '$stateProvider', '$locationProvider', 'showErrorsConfigProvider', function($urlRouterProvider, $stateProvider, $locationProvider, showErrorsConfigProvider) {

            <% @templates_path = 'angular/modules/gantt/templates/' %>

            $stateProvider
                    .state('app.gantt', {
                        url: '/gantt',
                        templateUrl: '<%= asset_path(@templates_path + 'index.html') %>',
                        controller: 'GanttCtrl'
                    });
        }]);