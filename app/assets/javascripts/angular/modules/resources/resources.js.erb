'use strict';

angular.module('app.resources', ['ui.router'])
        .config(['$urlRouterProvider', '$stateProvider', function($urlRouterProvider, $stateProvider) {

            <% @templates_path = 'angular/modules/resources/templates/' %>

            $stateProvider
                    .state('app.resources', {
                        url: '/resources',
                        controller: 'ResourcesIndexCtrl as resCtrl',
                        abstract: true,
                        templateUrl: '<%= asset_path(@templates_path + 'index.html') %>'
                    })
                    .state('app.resources.all', {
                        url: '',
                        templateUrl: '<%= asset_path(@templates_path + 'all.html') %>',
                        controller: 'ResourcesAllCtrl'
                    })
                    .state('app.resources.contacts', {
                        url: '/contacts',
                        templateUrl: '<%= asset_path(@templates_path + 'contacts.html') %>',
                        controller: 'ResourcesContactsCtrl'
                    })
                    .state('app.resources.equips', {
                        url: '/equips',
                        templateUrl: '<%= asset_path(@templates_path + 'equips.html') %>',
                        controller: 'ResourcesEquipsCtrl'
                    });
        }]);
